{
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.unstable"
    ]
  },
  "fmt": {
    "exclude": ["dist/"],
    "useTabs": false,
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "always"
  },
  "lint": {
    "exclude": ["dist/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
